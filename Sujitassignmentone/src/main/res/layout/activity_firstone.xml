<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:id="@+id/Rellayout"
    tools:context=".firstone">
    <ImageView
        android:id="@+id/img"
        android:layout_width="203dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:alpha=".5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/pika" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorPrimary"
        android:text="Welcome to Anime "
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/img"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/user"
        android:layout_width="354dp"
        android:layout_height="65dp"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:hint="Username"
        android:inputType="textImeMultiLine"
        android:layout_marginHorizontal="30sp"
        android:drawableLeft="@drawable/user"
        android:textColorHint="@android:color/background_dark"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/pass"
        android:layout_width="354sp"
        android:layout_height="65sp"
        android:layout_below="@+id/user"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:hint="Password"
        android:layout_marginHorizontal="30sp"
        android:drawableLeft="@drawable/lock2"
        android:paddingTop="12sp"
        android:layout_marginTop="20sp"
        android:inputType="textPassword"
        android:textColorHint="@android:color/background_dark"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="80sp"
        android:layout_marginTop="20sp"
        android:drawableLeft="@drawable/login2"
        android:textSize="20sp"
        android:backgroundTint="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login"
        android:text="OR"
        android:layout_marginTop="5sp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUP"
        android:layout_below="@id/or"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="80sp"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/sign"
        android:backgroundTint="@android:color/darker_gray"/>


</RelativeLayout>